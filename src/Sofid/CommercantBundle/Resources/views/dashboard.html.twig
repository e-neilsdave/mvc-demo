		{% block jslogout %}
		<script type="text/javascript">
	    $(function () {
		    
		// Logout Click  
		$('.logout').live('click',function() { 
			  var str="Logout"; 
			  var overlay="1"; 
			  loading(str,overlay);
			  setTimeout("unloading()",1500);
			  setTimeout( "window.location.href=window.location.pathname+'/../../../commercant/logout'", 2000 );
		  });
		  
	    });
	    </script>
	    {% endblock %}
	    
	    {% block jsiconlogout %}
		<script type="text/javascript">
	    $(function () {

		    // Animation icon  Logout 
			$('div.logout').hover(function(){
				  var name=$(this).find('img').attr('alt');
				  $(this).find('img').animate({ opacity: 0.4 }, 200, function(){
					    $(this).attr('src','../../bundles/sofidcommercant/images/'+name+'.png').animate({ opacity: 1 }, 500);									 
				 });
			},function(){
				  var name=$(this).find('img').attr('name');
				  $(this).find('img').animate({ opacity: 0.5 }, 200, function(){
					    $(this).attr('src','../../bundles/sofidcommercant/images/'+name+'.png').animate({ opacity: 1 }, 500);									 
				 });
			 })
			 
	    });
		 </script>
	    {% endblock %}
	    
